        <label asp-for="GroupId"></label>
        <select class="form-control form-select" asp-for="GroupId" asp-items="ViewBag.Groups"></select>
        <span asp-validation-for="GroupId" class="form-text text-muted"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumApplication"></label>
        <input class="form-control" asp-for="NumApplication">
        <span asp-validation-for="NumApplication" class="form-text text-muted"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>